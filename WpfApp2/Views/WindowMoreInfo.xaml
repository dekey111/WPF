<Window x:Class="WpfApp2.Views.WindowMoreInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Views"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Дополнительная информация" MinHeight="500" Height="700" Width="1100" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="3"
                   HorizontalAlignment="Center"
                   Text="{Binding TextHeader}"/>



        <TextBox Grid.Row="1" Grid.Column="0" Margin="10" IsReadOnly="True"
                 Tag="Транспорт" Text="{Binding SelectedCarTare.FullNameCar}"/>

        <TextBox Grid.Row="2" Grid.Column="0" Margin="10" IsReadOnly="True"
                 Tag="Номер Тары" Text="{Binding SelectedCarTare.TareNumbers}"/>

        <TextBox Grid.Row="3" Grid.Column="0" Margin="10" IsReadOnly="True"
                 Tag="вес брутто"  Text="{Binding SelectedCarTare.GrossWeight}"/>

        <TextBox Grid.Row="4" Grid.Column="0" Margin="10" IsReadOnly="True"
                 Tag="вес тары"  Text="{Binding SelectedCarTare.TareWeight}"/>

        <TextBox Grid.Row="5" Grid.Column="0" Margin="10" IsReadOnly="True"
                 Tag="вес нетто"  Text="{Binding SelectedCarTare.NetWeight}"/>
        
        <TextBox Grid.Row="6" Grid.Column="0" Margin="10" IsReadOnly="True"
                 Tag="дата тары" Text="{Binding SelectedCarTare.TareDate}"/>

        <TextBox Grid.Row="7" Grid.Column="0" Margin="10" IsReadOnly="True"
                 Tag="дата брутто" Text="{Binding SelectedCarTare.DateGross}"/>




    </Grid>
</Window>
